name: Semgrep
on:
  push:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Semgrep
        run: |
          container semgrep {
            git fetch origin ${{ env.SEMGREP_BASELINE_REF#origin/ }}
            semgrep-agent
          }